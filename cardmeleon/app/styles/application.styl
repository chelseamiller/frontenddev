// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

$font-family = Slackey
$header-background-color = #90425c
$masthead-background-color = black
$background-color = #16a085

$body-color = green
$text-color = #000000
$hover-color = #f4f0c3
$text-shadow = #5f6359
$box-shadow = #4b4d45

body
  padding-top: 40px
  color: $body-color
  background-color: $background-color

  .about
    display: block
    width: 100%
    z-index: 2000
    margin: 0 auto
    background: white
    margin-bottom: 80px
    padding: 5%
    text-align: center

  .about h1
    display: inline
    text-align: center
    width: 100%
    margin: 0 auto
    font-size: 10vw
    color: black
    font-family: Impact
    font-weight: bold

  #match
    color: #f39c12

  #howtoplay
    color: black
    margin-top: 0
    text-align: center
    font-weight: bold
    font-size: 4vw

  .toggled
    display: none
    font-size: 4vw
    width: 100%
    text-align: center
    color: black
    z-index: 3000
    margin: 0 auto

  .toggled li
    text-align: left

  h1
    text-align: center

  .thegame
    display: block
    width: 100%
    margin: 0 auto
    margin-bottom: 180px

  .haha
    position: relative
    text-align: center

  img
    border-radius: 7px
    border: 0px solid black

  input
    width: 200px
    margin-bottom: 10px
    border-radius: 5px
    border: 2px solid black
    background-color: black
    color: #f39c12
    font-weight: bold
    font-size: 28px


  #gamemessage
    text-align: center
    margin: 0 auto
    color: red

  #myhand
    text-align: center


  p
    border: 5px solid black
    display: inline-block
    border-radius: 7px
    color: black
    font-size: 7vw
    background-color: white
    width: 20vw
    height: 30vw
    text-align: center
    margin: 0 auto
    margin-right: 10px
    padding-top: 11%
    margin-bottom: 10px



  #facecard
    border: 5px solid #f39c12
    border-radius: 7px
    color: #f39c12
    font-size: 7vw
    background-color: black
    width: 20vw
    height: 30vw
    padding-top: 11%
    text-align: center
    margin: 0 auto
    margin-bottom: 10px





header
  font-family: $font-family

  .navbar
    background: $header-background-color
    padding: 10px 0
    border-bottom: 2px solid $box-shadow

    .navbar-brand,
    .navbar-nav > li > a
      color: $body-color

    .navbar-brand:hover,
    .navbar-nav > li > a:hover
      color: $hover-color

    .navbar-brand
      font-size: 22px
      text-transform: uppercase
      text-shadow: 2px 2px $text-shadow

    .nav > li > a
      font-size: 12px


footer
  padding-top: 30px
  font-family: $font-family
  height: 200px

  a
    color: #b7c4be
    font-size: 18px
    margin-right: 15px

  a:hover
    color: $body-color
    text-decoration: none
